
<section>

  <h3 class="labels">Edit Entry</h3>

  </br>

  <%= form_for @list_item, :url => { method: :patch, action: :update, class: "form-horizontal" } do |f| %>

    <div class="form-group">
      <%= f.label @quantity, class: "col-md-4 control-label labels"  %>
      <%= f.text_field @quantity, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.label @description, class: "col-md-4 control-label labels"  %>
      <%= f.text_field @description, class: "form-control"  %>
    </div>

    <div class="form-group">

      <%= f.label @price, class: "col-md-4 control-label labels"  %>
      <%= f.text_field @price, class: "form-control"  %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>

  <div>
    <%= link_to "Cancel", receipt_list_items_path(receipt_id: params[:receipt_id]), class: "btn btn-primary" %>
  </div>

</section>

<h3 class="labels"> Add an item to the receipt </h3>

</br>

<%= form_for @new_item, :url => { method: :post, action: :create } do |f| %>

  <div class="form-group">
    <%= f.label @quantity, class: "col-md-4 control-label labels"  %>
    <%= f.text_field @quantity, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label @description, class: "col-md-4 control-label labels"  %>
    <%= f.text_field @description, class: "form-control"  %>
  </div>

  <div class="form-group">

    <%= f.label @price, class: "col-md-4 control-label labels"  %>
    <%= f.text_field @price, class: "form-control"  %>
  </div>

  <%= f.hidden_field :receipt_id, :value => params[:receipt_id] %>

  <%= f.submit "Submit", class: "btn btn-primary" %>

<% end %>

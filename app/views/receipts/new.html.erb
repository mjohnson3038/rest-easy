<article>

  <% if !@receipt.errors.empty? %>
    <div class="alert alert-error">
      <ul>
        <% @receipt.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="well">
    <%= form_for @receipt, html: { multipart: true } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code %>
      <!-- Find a way to change the button -->
      <%= f.label :attachment%>
      <%= f.file_field :attachment%>
      <%= f.hidden_field :status, :value => 1 %>
      <%= f.submit "Save", class: "btn btn-primary button" %>
    <% end %>
  </div>

  <div>
    <%= link_to "Cancel", receipts_path, class: "btn button" %>
  </div>

</article>

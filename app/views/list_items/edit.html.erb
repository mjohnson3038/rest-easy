
<section>

  <h4>Edit Entry</h4>

  <p><%= @list_item.id %></p>

  <%= form_for @list_item, :url => { method: :patch, action: :update, class: "form" } do |f| %>

    <div class="form-group">
      <%= f.label @quantity %>
      <%= f.text_field @quantity %>
    </div>

    <div class="form-group">
      <%= f.label @description %>
      <%= f.text_field @description %>
    </div>

    <div class="form-group">

      <%= f.label @price %>
      <%= f.text_area @price %>
    </div>

    <%= f.submit "Submit" %>
  <% end %>

</section>
